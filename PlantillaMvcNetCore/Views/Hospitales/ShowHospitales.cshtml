@model List<Hospital>

@{
    ViewData["Title"] = "Hospitales";
}

<h1 style="text-align: center;" class="text-primary">
    Hospitales
</h1>

<table class="table table-dark table-bordered">
    <thead>
        <tr style="text-align: center;">
            <th>Código</th>
            <th>Nombre</th>
            <th>Dirección</th>
            <th>Teléfono</th>
            <th>Nº Camas</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Hospital hosp in Model) {
            <tr>
                <td style="text-align: center;">@hosp.HospitalCod</td>
                <td>@hosp.Nombre</td>
                <td>@hosp.Direccion</td>
                <td>@hosp.Telefono</td>
                <td>@hosp.NumCama</td>
                <td style="text-align: center;">
                    @Html.ActionLink("Detalles", "Details", "Hospitales", new { hospital_cod = hosp.HospitalCod }, 
                                     new { @class = "btn btn-primary", style = "font-weight: bold;"})

                    @Html.ActionLink("Update", "Update", "Hospitales", new { hospital_cod = hosp.HospitalCod }, 
                                     new { @class = "btn btn-warning", style = "font-weight: bold;"})
                    
                    @Html.ActionLink("Delete", "Delete", "Hospitales", new { hospital_cod = hosp.HospitalCod }, 
                                     new { @class = "btn btn-danger", style = "font-weight: bold;"})
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.ActionLink("Create Hospital", "Insert", "Hospitales", null, new { @class = "btn btn-primary", style = "font-weight: bold;"})